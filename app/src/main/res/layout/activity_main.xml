<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="JUAN JOSE BAUTISTA GALLEGO"
        android:background="@drawable/bg_gradient"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="15dp"/>

    <ImageView
        android:id="@+id/imgvLogin"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="20sp"/>

    <EditText
        android:id="@+id/etAPIID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3f68851b06a54354834d0ed34bf7a78e"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="Introduce tu API ID"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGetData"
        style="@style/miEstiloBoton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:text="Obtener cambio divisas"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listViewDivisas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_margin="15dp" />
    <TextView
        android:id="@+id/tv_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="Pulsa en un elemento para borrarlo" />


</LinearLayout>